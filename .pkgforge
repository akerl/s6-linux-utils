name 's6-linux-utils'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.3.1-1',
    checksum: '62a102ff701f15879ee21b867db14e4cf170b7e1be34af60c65c7b6684bf1ee7'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  "with-include=#{dep(:'linux-api-headers')}/usr/include": nil,
  'with-include': "#{dep(:skalibs)}/usr/include",
  'with-lib': "#{dep(:skalibs)}/usr/lib/skalibs",
  'with-dynlib': "#{dep(:skalibs)}/usr/lib",
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps"
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
