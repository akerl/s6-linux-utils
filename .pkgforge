name 's6-linux-utils'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.5.1.1-1',
    checksum: '1a4947186b8a19047258f76f2b297f6d301a48147b14e61ba093b4462d19ce9f'
  },
  'linux-api-headers': {
    version: '4.12-1',
    checksum: '25d3672456a93cc7f6743d4b2c227ad7a9456f4ec2a9f09ab7f2e9e6cb56aeaa'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  "with-include=#{dep(:'linux-api-headers')}/usr/include": nil,
  'with-include': "#{dep(:skalibs)}/usr/include",
  'with-lib': "#{dep(:skalibs)}/usr/lib/skalibs",
  'with-dynlib': "#{dep(:skalibs)}/usr/lib",
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps"
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
