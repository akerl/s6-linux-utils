name 's6-linux-utils'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.4.0-1',
    checksum: '00d8128bc935f5175c9f24258532593d2b156f0551feec3457abcf48a61cef93'
  },
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  "with-include=#{dep(:'linux-api-headers')}/usr/include": nil,
  'with-include': "#{dep(:skalibs)}/usr/include",
  'with-lib': "#{dep(:skalibs)}/usr/lib/skalibs",
  'with-dynlib': "#{dep(:skalibs)}/usr/lib",
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps"
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
